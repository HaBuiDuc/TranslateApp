<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/meaning_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <RelativeLayout
            android:id="@+id/word_item"
            android:background="@drawable/meaning_item_background"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/word_tv"
                android:layout_alignParentTop="true"
                android:text="xin chao"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/caros_soft_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            />
        <View
                android:id="@+id/word_view_separate"
                android:layout_below="@+id/word_tv"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray"/>
        <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_below="@+id/word_view_separate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/word_speaker"
                    android:layout_toStartOf="@+id/word_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_speaker"
                    android:contentDescription="TODO"/>
            <ImageView
                    android:id="@+id/word_favorite"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/icon_star_selector"
                    android:contentDescription="TODO"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/meaning_item"
            android:background="@drawable/meaning_item_background"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/meaning_tv"
                android:layout_alignParentTop="true"
                android:text="xin chao"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/caros_soft_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <View
                android:id="@+id/meaning_view_separate"
                android:layout_below="@+id/meaning_tv"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/very_light_gray" tools:ignore="DuplicateIds"/>
        <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_below="@+id/meaning_view_separate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/meaning_speaker"
                    android:layout_toStartOf="@+id/meaning_fv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_speaker"
                    android:contentDescription="TODO"/>
            <ImageView
                    android:id="@+id/meaning_fv"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/icon_star"
                    android:contentDescription="TODO"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
