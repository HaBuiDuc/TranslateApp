<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="android.buiducha.translateapp.fragment.VoiceTranslateFragment"
            tools:context=".activity.MainActivity"
    >
    </androidx.fragment.app.FragmentContainerView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/translate_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bottom_navigation"
            android:padding="8dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:itemIconSize="24sp"
            app:itemIconTint="@color/item_bottom_nav_color"
            app:itemTextColor="@color/white"
            app:menu="@menu/navigation_item"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
